<%= form_for @feedback do |form| %>

  <div class="row" style="padding: 4rem 2rem">
    <div class="col-lg-2 col-md-0"></div>

    <div class="col-lg-8 col-md-0">
      <div class="text-center" >
        <h3>Give your Feedback</h3>
      </div>

      <form style="float:none; clear:both">
        <div class="form-group row">
          <%= form.label :name, :class=>"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :name, id: :feedback_name, :class => 'form-control pull-right' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :email, :class => 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :email, id: :feedback_email, :class => 'form-control pull-right' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :message, :class => 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_area :message, id: :feedback_message, :class => 'form-control pull-right' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-12">
            <%= form.submit "Submit Feedback", :class => "btn btn-light link-unstyle pull-right", :role=>"btn"%>
          </div>
        </div>
      </form>
    </div>

    <div class="col-lg-2 col-md-0"></div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-md-0"></div>
    <div class="col-lg-8 col-md-0">
      <div class="alert">
        <% if @feedback.errors.any? %>
          <div id="error_explanation">

            <ul>
            <% @feedback.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      </div>
    </div>
    <div class="col-lg-2 col-md-0"></div>
  </div>

<%end%>
