

<div class="row">
  <div class="col-lg-2 col-md-0"></div>
  <div class="col-lg-8 col-md-12">
    <table class="table table-striped table-inverse">
      <tr>
        <h3 colspan="6" style="text-align:center">Co-ordinators</h3>
      </tr>
      <tr>
        <th>Event</th>
        <th>Name</th>
        <th>Contact no</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>

      <% @eventcoordinators.each do |eventcoordinator| %>
        <tr>
          <td><%= eventcoordinator.Event %></td>
          <td><%= eventcoordinator.Name %></td>
          <td><%= eventcoordinator.Contact_no %></td>
          <td><%= eventcoordinator.Email %></td>
          <td><%= link_to 'Edit', edit_eventcoordinator_path(eventcoordinator), :class =>'link-unstyle' %></td>
          <td><%= link_to 'Remove', eventcoordinator, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'link-unstyle' %></td>
        </tr>
      <% end %>

    </table>
    <tr>
      <td colspan="2"><%= link_to 'Add Co-ordinator', new_eventcoordinator_path, :class => "btn btn-light link-unstyle pull-right", :role=>"btn" %></td>
    </tr>
  </div>
  <div class="col-lg-2 col-md-0"></div>
</div>
