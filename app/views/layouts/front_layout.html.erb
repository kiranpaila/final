                <div class="dropdown-menu" aria-labelledby="SubDD1">
                  <% Event.where("events.Department = ? and events.Type = ?", 'Computer Science', 'Technical').each do |e| %>
                    <%= link_to e.Title, event_path(e.id) , :class => "link-unstyle" %>
                  <% end %>
                </div>
              </div>
              <div class="nav-item dropdown dropdown-submenu">
                <a href="javascript:void(0)" class="nav-link dropdown-toggle" id="SubDD2" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Electronics</a>
                <div class="dropdown-menu" aria-labelledby="SubDD2">
