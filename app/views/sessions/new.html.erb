<%= stylesheet_link_tag    'welcomeindex', media: 'all', 'data-turbolinks-track' => true %>

<div class=" admin-login jumbotron container-fluid", style="height:650px; background-color:grey; ">

<%= form_for(:session, url: login_path) do |form|  %>

  <div class="row" style="padding: 4rem 2rem">
    <div class="col-lg-2 col-md-0">
    </div>

    <div class="col-lg-8 col-md-0">
      <div class="text-center" >
        <h3>Fest Management System</h3>
        <h4>Admin</h4>
      </div>

      <form style="float:none; clear:both">
        <div class="form-group row">
          <%= form.label :name, :class=>"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :name, id: :admin_name, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password, :class => 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.password_field :password, id: :admin_password, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <div class="checkbox-inline">
              <%= form.check_box :remember_me %>
              <%= form.label :remember_me, "Remember me on this Computer" %><br>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class=" col-sm-12">
            <%= form.submit "Log_In", :class => "btn btn-block btn-light link-unstyle", :role=>"btn"%>
          </div>
        </div>
      </form>
    </div>

    <div class="col-lg-2 col-md-0">
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-md-0">
    </div>
    <div class="col-lg-8 col-md-0">
      <div class="alert">
        <% if flash[:notice] %>
          <p id="notice"><%= flash[:notice] %></p>
        <% end %>
      </div>
    </div>


    <div class="col-lg-2 col-md-0">
    </div>
  </div>

<% end %>

</div>
