
<div class="row">
  <div class="col-lg-4 col-md-0"></div>
  <div class="col-lg-4 col-md-12">
    <table class="table table-striped table-inverse">
      <tr>
        <h3 colspan="2" style="text-align:center">All Users</h3>
      </tr>
      <tr>
        <th>Username</th>
        <th>Email</th>
      </tr>

      <% @users.each do |user| %>

        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"link-unstyle1" %></td>
        </tr>
      <% end %>

    </table>
    <tr>
      <td colspan="2"><%= link_to 'add user', new_user_path(@user), :class => "btn btn-light link-unstyle pull-right", :role=>"btn" %></td>
    </tr>
  </div>
  <div class="col-lg-4 col-md-0"></div>
</div>
