<%= stylesheet_link_tag    'welcomeindex', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'welcomeindex' %>
<%= csrf_meta_tags %>

<div id="front-container" class="container-fluid">

  <div class="row">

    <nav class="navbar navbar-expand-md fixed-top navbar-light bg-light" >

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="container nav navbar-nav d-flex justify-content-between">

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="EventsDD" data-toggle="dropdown" href="javascript:void(0)" role="button" aria-haspopup="true" aria-expanded="false">
              Event
            </a>
            <div class="dropdown-menu" aria-labelledby="EventsDD">
              <div class="nav-item dropdown dropdown-submenu">
