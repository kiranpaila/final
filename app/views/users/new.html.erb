<%= form_for @user do |form| %>


  <div class="row">
    <div class="col-lg-2 col-md-0">
    </div>

    <div class="col-lg-8 col-md-0">
      <div class="text-center" >
        <h3>New User</h3>
      </div>

      <form style="">
        <div class="form-group row">
          <%= form.label :name, :class=>"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :name, id: :user_name, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :email, :class => 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :email, id: :user_email, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password, :class => 'col-sm-2 col-form-label'%>
          <div class="col-sm-10">
            <%= form.password_field :password, id: :user_password, :class => 'form-control'%>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-12">
            <%= link_to 'Back', users_path, :class => "btn btn-light link-unstyle pull-left", :role=>"btn" %>
            <%= form.submit "Add User", :class => "btn btn-light link-unstyle pull-right", :role=>"btn"%>
          </div>
        </div>
      </form>
    </div>

    <div class="col-lg-2 col-md-0">
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-md-0">
    </div>
    <div class="col-lg-8 col-md-0">
      <div class="alert">
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

      </div>
    </div>


    <div class="col-lg-2 col-md-0">
    </div>
  </div>

<%end%>
