                    <%= link_to e.Title, event_path(e.id) , :class => "link-unstyle" %>
                  <% end %>
                </div>
              </div>
              <div class="nav-item dropdown dropdown-submenu">
                <a href="javascript:void(0)" class="nav-link dropdown-toggle" id="SubDD3" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Civil</a>
