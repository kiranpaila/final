
<%= form_with(model: eventcoordinator, local: true) do |form| %>


  <div class="row">
    <div class="col-lg-2 col-md-0">
    </div>

    <div class="col-lg-8 col-md-0">
        <div class="form-group row">
          <%= form.label :Event, :class => 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :Event, id: :eventcoordinator_Event, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :Name, :class => 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :Name, id: :eventcoordinator_Name, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :Contact_no, :class => 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :Contact_no, id: :eventcoordinator_Contact_no, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :Email, :class => 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :Email, id: :eventcoordinator_Email, :class => 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-12">
            <%= link_to 'Back', eventcoordinators_path, :class => "btn btn-light link-unstyle pull-left", :role=>"btn" %>
            <%= form.submit "Add Co-ordinator", :class => "btn btn-light link-unstyle pull-right", :role=>"btn"%>
          </div>
        </div>
      </form>
    </div>

    <div class="col-lg-2 col-md-0">
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-md-0">
    </div>
    <div class="col-lg-8 col-md-0">
      <div class="alert">
        <% if eventcoordinator.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(eventcoordinator.errors.count, "error") %> prohibited this eventcoordinator from being saved:</h2>

            <ul>
            <% eventcoordinator.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      </div>
    </div>


    <div class="col-lg-2 col-md-0">
    </div>
  </div>

<%end%>
