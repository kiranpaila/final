

<div class="row">
  <div class="col-lg-4 col-md-0"></div>
  <div class="col-lg-4 col-md-12">
    <table class="table table-striped table-inverse">
      <tr>
        <h3 colspan="2" style="text-align:center">News</h3>
      </tr>
      <tr>
        <th>Message</th>
        <th>Date</th>
      </tr>

      <% @news.each do |news| %>

        <tr>
          <td><%= news.message %></td>
          <td><%= news.created_at.strftime('%m/%d/%Y') %></td>

        </tr>
      <% end %>

    </table>
    <tr>
      <td colspan="2"><%= link_to 'Add News', new_news_path, :class => "btn btn-light link-unstyle pull-right", :role=>"btn" %></td>
    </tr>
  </div>
  <div class="col-lg-4 col-md-0"></div>
</div>
