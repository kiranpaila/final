<div class="row event-block" style="font-size: 50px;">
  <div class="col-md-3 col-sm-12">
  </div>
  <div class="col-md-6 col-sm-12 text-center">
    <%= @event.Title %>
  </div>
  <div class="col-md-3 col-sm-12">
  </div>
</div>

<div class="row event-block" style="font-size: 30px; line-height: 60px">
  <div class="col-md-3 col-sm-12">
  </div>
  <div class="col-md-6 col-sm-12 text-center">
    <%= @event.Description %>
  </div>
  <div class="col-md-3 col-sm-12">
  </div>
</div>

<div class="row event-sub-block" style="font-size: 22px;">
  <div class="col-md-6 col-sm-12 text-center">
    <div class="row">
      <div class="col-md-12">
        <span><b>Venue:</b> <%= @event.Venue %></span>
      </div>
      <div class="col-md-12">
        <span><b>Registration Fee:</b>  <%= @event.Cost %></span>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-sm-12 text-center">
    <div class="row">
      <div class="col-md-12">
        <span><b>Date:</b> <%= @event.Date.strftime('%m/%d/%Y') %></span>
      </div>
      <div class="col-md-12">
        <span><b>Time: </b> <%= @event.Time.strftime('%H:%M') %></span>
      </div>
    </div>
  </div>
</div>

<div class="row event-sub-block" style="font-size: 22px;">
  <div class="col-md-6 col-sm-12 text-center">
    <div class="row">
      <div class="col-md-12">
        <span><b>Co-ordinator Details:</b></span>
      </div>
      <div class="col-md-12">
          <%= @co_name[0] %>
      </div>
      <div class="col-md-12">
          <%= @co_email[0] %>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-sm-12 text-center event-button">
    <div class="row">
      <div class="col-md-12">
        <%= link_to "Registration", new_registration_path, :class => "btn btn-light link-unstyle pull-right"%>
      </div>
    </div>
  </div>
</div>
