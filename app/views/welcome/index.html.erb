<%= stylesheet_link_tag    'welcomehead', media: 'all', 'data-turbolinks-track' => true %>

<div class="row">

  <div class="jumbotron welcome  col-lg-10 col-md-12 text-center">
    <div class="hit-the-floor">Fest Management System</div>
  </div>

    <div class="jumbotron col-lg-2 col-md-12">

      <div id="newsFlash" class="updates">NEWS</div>

        <div class="holder">
          <ul id="newsPosts" class="">
            <%#= it will go in loop manner %>
            <% News.all.each do |news| %>
                <li class="card">
                  <div class="card-body">
                    <%= news.created_at.strftime('%m/%d/%Y') %><br/>
                     <%= news.message %>
                  </div>
                </li>
            <% end %>
          </ul>
        </div>

      </div>

    </div>

</div>
