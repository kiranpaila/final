                  <% end %>
                </div>
              </div>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="WorkshopsDD" data-toggle="dropdown" href="javascript:void(0)" role="button" aria-haspopup="true" aria-expanded="false">
              Workshop
            </a>
            <div class="dropdown-menu" aria-labelledby="WorkshopsDD">
            <% Event.where("events.Type = ?",  'Workshop').each do |e| %>
              <%= link_to e.Title, event_path(e.id) , :class => "link-unstyle" %>
            <% end %>
            </div>
          </li>
          <li class="nav-item active">
            <%= link_to root_path, :class => "btn btn-dark btn-circle onCollapseA" do %>
              <i class="fa fa-home fa-2x" ></i>
            <% end %>

            <%= link_to 'Home', root_path , :class => "nav-link onCollapseB" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="SeminarsDD" data-toggle="dropdown" href="javascript:void(0)" role="button" aria-haspopup="true" aria-expanded="false">
